<h1>The Tasks</h1>

<% @tasks.each do |task| %>
  <h2><%= task.title %></h2>
  <p><%= task.description %></p>
  <%= link_to "edit", edit_task_path(task.id) %>
  <%= link_to "Delete", task_path(task.id),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
<% end %>
